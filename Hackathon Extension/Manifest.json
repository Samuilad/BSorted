{   
    "manifest_version": 2,
    "name": "Getting Started Example",
    "version": "0.1",
    "description": "Build an Extension!",
    "externally_connectable": {
      "matches": ["*://*.example.com/*"]
    },
    "background": {
      "scripts": ["Background.js"],
      "persistent": true
    },
    "permissions": ["contextMenus", "nativeMessaging", "storage", "tabs"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "A popup will come here",
      "default_icon": "IBSortedIcon.png"
    }
    
  }